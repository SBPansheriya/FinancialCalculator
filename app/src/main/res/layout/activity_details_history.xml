<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailsHistoryActivity">

    <RelativeLayout
        android:id="@+id/tbMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D5B68"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:layout_toEndOf="@+id/back"
            android:fontFamily="@font/lexenddeca_bold"
            android:gravity="center"
            android:text="@string/history"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbMenu"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_toStartOf="@+id/amount"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/amount"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10sp"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/_0_00"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_toStartOf="@+id/interest"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/interest2"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10sp"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/_0_00"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_toStartOf="@+id/period_months"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/period_months"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/period_months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10sp"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/_0_00"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_toStartOf="@+id/monthly_emi"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/monthly_emi"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/monthly_emi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10sp"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/_0_00"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_toStartOf="@+id/total_interest"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/total_interest"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10sp"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/_0_00"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_toStartOf="@+id/total_payments"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/total_payments"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total_payments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10sp"
                android:fontFamily="@font/lexenddeca_medium"
                android:text="@string/_0_00"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border"
        android:layout_below="@+id/linear"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:fontFamily="@font/lexenddeca_medium"
                android:gravity="center"
                android:text="@string/month"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:backgroundTint="@null" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:fontFamily="@font/lexenddeca_medium"
                android:gravity="center"
                android:text="@string/principal"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:backgroundTint="@null" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:fontFamily="@font/lexenddeca_medium"
                android:gravity="center"
                android:text="@string/interestrate"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:backgroundTint="@null" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/border2"
                android:fontFamily="@font/lexenddeca_medium"
                android:gravity="center"
                android:text="@string/balance"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:backgroundTint="@null" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detail_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10sp"
            android:layout_marginHorizontal="20dp"
            tools:listitem="@layout/item_detail_history_list" />
    </LinearLayout>
</RelativeLayout>